<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:orientation="vertical">
	<TextView android:text="@string/widget_select_album"
		android:layout_height="wrap_content" android:id="@+id/textView"
		android:layout_width="wrap_content" android:layout_weight="1"></TextView>
	<Button android:layout_gravity="center" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="@string/Go"
		android:layout_weight="1" android:id="@+id/open"></Button>
</LinearLayout>